{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    /* Bundler mode */
    "noEmitOnError": true,
    "jsx": "react-jsx",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    /* Linting */
    "strict": true,
    "composite": true,
    "sourceMap": true,
    "module": "ESNext",
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    /* Custom paths for imports */
    "baseUrl": "./",
    "paths": {
      "@src/*": [
        "src/*"
      ],
      "@assets/*": [
        "src/assets/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@hooks/*": [
        "src/hooks/*"
      ],
      "@store/*": [
        "src/store/*"
      ],
      "@utilities/*": [
        "src/utilities/*"
      ],
    }
  },
  "include": [
    "src",
    "vite.config.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ],
}